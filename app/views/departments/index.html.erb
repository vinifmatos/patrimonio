<div class="container">
  <p id="notice"><%= notice %></p>
  <div class="row">
    <h1>Departments</h1>
    <div class="ml-auto mt-2">
      <%= link_to 'New Department', new_department_path, class: 'btn btn-success' %>
    </div>
  </div>
  <div class="row">
    <table class="table table-bordered table-hover">
      <thead>
        <tr>
          <th>Description</th>
          <th>Property</th>
          <th>Active</th>
        </tr>
      </thead>
      <tbody>
        <% @departments.each do |department| %>
          <tr>
            <td><%= link_to department.description, department %></td>
            <td><%= department.property.description %></td>
            <td><%= department.active %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
