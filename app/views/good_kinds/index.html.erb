<div class="container">
  <p id="notice"><%= notice %></p>
  <div class="row">
    <h1><%= @good_kinds.model_name.human(count: 2) %></h1>
    <div class="ml-auto mt-2">
      <%= link_to t('views.good_kinds.new.title'), new_good_kind_path, class: 'btn btn-success' %>
    </div>
  </div>
  <div class="row">
    <table class="table table-bordered table-hover">
      <thead>
        <tr>
          <th><%= @good_kinds.human_attribute_name(:description) %></th>
          <th><%= @good_kinds.human_attribute_name(:active) %></th>
        </tr>
      </thead>
      <tbody>
        <% @good_kinds.each do |good_kind| %>
          <tr>
            <td><%= link_to good_kind.description, good_kind %></td>
            <td><%= t_active good_kind.active %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
