<div class="container">
  <p id="notice"><%= notice %></p>
  <div class="row">
    <h1>Goods</h1>
    <div class="ml-auto mt-2">
      <%= link_to 'New Good', new_good_path, class: 'btn btn-success' %>
    </div>
  </div>
  <div class="row">
    <table class="table table-bordered table-hover">
      <thead>
        <tr>
          <th>Code</th>
          <th>Description</th>
          <th>Specification</th>
          <th>Situation</th>
          <th>Purchase price</th>
          <th>Purchase date</th>
          <th>Base date</th>
          <th>Category</th>
          <th>Department</th>
        </tr>
      </thead>
      <tbody>
        <% @goods.each do |good| %>
          <tr>
            <td><%= good.code %></td>
            <td><%= link_to good.description, good %></td>
            <td><%= good.specification %></td>
            <td><%= good.situation %></td>
            <td><%= good.purchase_price %></td>
            <td><%= good.purchase_date %></td>
            <td><%= good.base_date %></td>
            <td><%= good.good_category.description %></td>
            <td><%= good.department.description %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
