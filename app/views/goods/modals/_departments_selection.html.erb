<div class="modal fade" id="modal_departments" tabindex="-1" role="dialog" aria-labelledby="depatments" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">New message</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="accordion" id="accordionExample">
          <% properties.each do |property| %>
            <div class="card">
              <div class="card-header" id="headingOne">
                <h2 class="mb-0">
                  <%= button_tag property.description, class: 'btn btn-link', type: :button, data: { toggle: :collapse, target: "#collapse_#{property.id}" }, aria: { expanded: true, controls: "collapse_#{property.id}"} %>
                </h2>
              </div>
              <%= tag.div id: "collapse_#{property.id}", class: :collapse, data: { parent: '#accordionExample' } do %>
                <% property.departments.each do |department| %>
                  <div class="card-body">
                    <%= department.description %>
                  </div>
                <% end %>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Send message</button>
      </div>
    </div>
  </div>
</div>
