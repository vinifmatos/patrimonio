<div class="modal fade" id="new-movement-modal" tabindex="-1" role="dialog" aria-labelledby="new-movement-modal" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="new-movement-modal-label"><%= t('views.movements.new.title') %></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <%= form_with(model: [good, Movement.new], remote: true, id: 'movement-form', class: 'needs-validation', html: { novalidate: :true }) do |form| %>
        <div class="modal-body">
          <div class="form-group">
            <%= form.label :date %>
            <%= datepicker_field(form, :date, { required: true }) %>
          </div>
          <div class="form-group">
            <%= form.label :department_id %>
            <%= form.select :department_id, grouped_options_for_select(departments), { prompt: :prompt_text }, class: 'form-control', required: true %>
          </div>
          <div class="form-group">
            <%= form.label :movement_kind_id %>
            <%= form.select :movement_kind_id, movement_kids, { prompt: :prompt_text }, class: 'form-control', required: true %>
          </div>
        </div>
        <div class="modal-footer">
          <div class="actions">
            <%= form.submit class: 'btn btn-success' %>
            <%= button_tag t('views.actions.back'), class: 'btn btn-primary', data: { dismiss: 'modal' } %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
