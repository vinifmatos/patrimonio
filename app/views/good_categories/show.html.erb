<div class="container">
  <p id="notice"><%= notice %></p>
  <p>
    <strong><%= GoodCategory.human_attribute_name(:description) %>:</strong>
    <%= @good_category.description %>
  </p>
  <p>
    <strong><%= GoodCategory.human_attribute_name(:active) %>:</strong>
    <%= t_active @good_category.active %>
  </p>
  <p>
    <strong><%= GoodCategory.human_attribute_name(:good_sub_kind_id) %>:</strong>
    <%= @good_category.sub_kind.description %>
  </p>
  <%= link_to t('views.actions.back'), good_categories_path, class: 'btn btn-primary' %>
  <%= link_to t('views.actions.edit'), edit_good_category_path(@good_category), class: 'btn btn-primary' %>
  <%= link_to t('views.actions.destroy'), @good_category, method: :delete, data: { confirm: t('views.confirm') }, class: 'btn btn-danger' %>
</div>
