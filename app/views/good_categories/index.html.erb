<div class="container">
  <p id="notice"><%= notice %></p>
  <div class="row">
    <h1><%= GoodCategory.model_name.human(count: 2) %></h1>
    <div class="ml-auto mt-2">
      <%= link_to t('views.good_categories.new.title'), new_good_category_path, class: 'btn btn-success' %>
    </div>
  </div>
  <div class="row">
    <table class="table table-bordered table-hover">
      <thead>
        <tr>
          <th><%= GoodCategory.human_attribute_name(:description) %></th>
          <th><%= GoodCategory.human_attribute_name(:active) %></th>
          <th><%= GoodCategory.human_attribute_name(:good_sub_kind_id) %></th>
        </tr>
      </thead>
      <tbody>
        <% @good_categories.each do |good_category| %>
          <tr>
            <td><%= link_to good_category.description, good_category %></td>
            <td><%= t_active good_category.active %></td>
            <td><%= good_category.sub_kind.description %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
