<div class="container mt-3">
  <div class="card">
    <div class="card-header">
      <h1><%= t('views.users.change_password.title') %></h1>
    </div>
    <div class="card-body">
      <%= form_with model: @user, url: { action: :update_password }, local: true do |form| %>
        <div class="form-group">
          <%= form.label :password, t('devise.passwords.edit.new_password') %>
          <%= form.password_field :password, autocomplete: false, class: 'form-control wd-2' %>
        </div>
        <div class="form-group">
          <%= form.label :password_confirmation, t('devise.passwords.edit.confirm_new_password')  %>
          <%= form.password_field :password_confirmation, autocomplete: false, class: 'form-control wd-2' %>
        </div>
        <div class="form-group">
          <%= form.label :current_password %>
          <%= form.password_field :current_password, autocomplete: false, class: 'form-control wd-2' %>
        </div>
        <div class="actions">
          <%= form.submit t('devise.passwords.edit.change_my_password'), class: 'btn btn-success'%>
          <%= link_to t('views.actions.cancel'), root_path, class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
