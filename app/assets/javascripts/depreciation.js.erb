$(document).on('turbolinks:load', function () {
  $("#depreciable_goods > tbody > tr > td > input").change(function () {
    if ($(this).prop("checked")) {
      $(this).parent().parent().addClass("table-primary")
    } else {
      $(this).parent().parent().removeClass("table-primary")
    }
  });
});

$(document).on('turbolinks:load', function () {
  $("#depreciable_goods > tbody > tr > td").on("dbclick", function () {
    if ($(this).parent().children("td > input").prop("checked")) {
      $(this).parent().addClass("table-primary")
    } else {
      $(this.parent()).removeClass("table-primary")
    }
  })
})
